<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">

    <LinearLayout style="@style/HorizontalLinearLayout" >
        <TextView
            style="@style/TextView"
            android:textSize="14dp"
            android:text="Task" />
        <TextView
            style="@style/TextContent"
            android:textSize="14dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/list_text_taskName" />
    </LinearLayout>
    <LinearLayout style="@style/HorizontalLinearLayout" >
        <TextView
            style="@style/TextView"
            android:text="Members" />
        <TextView
            style="@style/TextContent"
            android:layout_marginBottom="2dp"
            android:id="@+id/list_text_taskMembers" />
    </LinearLayout>
    <LinearLayout style="@style/HorizontalLinearLayout" >
        <TextView
            style="@style/TextView"
            android:text="TODO" />
        <TextView
            style="@style/TextContent"
            android:layout_marginBottom="2dp"
            android:id="@+id/list_text_taskDescription" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:stretchColumns="0,1" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout style="@style/HorizontalLinearLayout"
                android:layout_width="wrap_content">
                <TextView
                    style="@style/TextView"
                    android:layout_width="wrap_content"
                    android:text="From: " />
                <TextView
                    style="@style/TextContent"
                    android:id="@+id/list_text_taskStartTime" />
            </LinearLayout>
            <LinearLayout style="@style/HorizontalLinearLayout"
                android:layout_width="wrap_content">
                <TextView
                    style="@style/TextView"
                    android:layout_width="wrap_content"
                    android:text="To: " />
                <TextView
                    style="@style/TextContent"
                    android:id="@+id/list_text_taskDueDate" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>
